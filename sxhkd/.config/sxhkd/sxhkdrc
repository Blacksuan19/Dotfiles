# regular everyday stuff
super + w
    exo-open --launch WebBrowser

super + Return
    exo-open --launch TerminalEmulator

super + f
    exo-open --launch FileManager

# program launcher
alt + F1
    rofi_run -r

# reload configurations
super + shift + r
    pkill -USR1 -x sxhkd

# close and kill
super + {_,shift + }q
    bspc node -{c,k}

# swap the current node and the biggest node
super + g
    bspc node -s biggest

# set the window state
super + F9
    bspc node --state tiled

super + F10
    bspc node --state floating

super + F11
    bspc node --state fullscreen

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
    bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
    bspc {node,desktop} -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
ctrl + alt + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}

# flameshot full screen
Print
    flameshot full -p /media/Dark-Files/Screenshots

# flameshot gui
Print + shift
    flameshot gui -p /media/Dark-Files/Screenshots

# rofi green cipboard
super + v
    rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

# spotify Stuff
super + s
    spotify --disable-gpu

# typora
super + t
   telegram-desktop

super + shift + t
    typora

# volume control keys
XF86AudioMute
    pactl set-sink-mute 0 toggle

XF86AudioRaiseVolume
    pactl set-sink-volume 0 +5%

XF86AudioLowerVolume
    pactl set-sink-volume 0 -5%

# brightness
XF86MonBrightnessUp
    light -A 10
XF86MonBrightnessDown
    light -U 10

# music control
XF86AudioNext
    playerctl next
XF86AudioPrev
    playerctl previous
XF86AudioPlay
    playerctl play-pause

# sleep key
XF86Sleep
    systemctl suspend

# language switch
alt + shift
    xkblayout-state set +1 && notify-send Language "Changed to next layout"
