# launch web browser
super + w
   google-chrome-stable

# launch terminal
super + Return
   kitty

# launch file manager
super + f
   kitty ~/bin/vifmrun

# program launcher
alt + F1
    rofi_run -r

# reload configurations
super + shift + r
    pkill -USR1 -x sxhkd

# close current focused node
super + q
    bspc node -c

# swap the current node and the biggest node
super + g
    bspc node -s biggest

# set the window state to tiled
super + F9
    bspc node --state tiled

# set the window state to floating
super + F10
    bspc node --state floating

# set the window state to fullscreen
super + F11
    bspc node --state fullscreen

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
    bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
    bspc {node,desktop} -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
ctrl + alt + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}

# take a fullscreen screenshot
Print
    flameshot full -p /media/Dark-Files/Screenshots

# take a selected area screenshot
Print + shift
    flameshot gui -p /media/Dark-Files/Screenshots

# take a fullscreen screenshot with 5s delay
Print + alt
    flameshot full -d 5000 -p /media/Dark-Files/Screenshots

# clipboard manager
super + v
    rofi_run -c

# exit menu
super + x
    rofi_run -l

# spotify
super + s
    spotify

# telegram
super + t
   telegram-desktop

# markdown editor
super + shift + t
    typora

# get a new wallpaper
super + n
    unsplash.sh

# show keybindings
super + F1
   rofi_run -s

# toggle volume mute
XF86AudioMute
    pactl set-sink-mute 0 toggle

# increase volume by 5%
XF86AudioRaiseVolume
    pactl set-sink-volume 0 +5%

# decrease volume by 5%
XF86AudioLowerVolume
    pactl set-sink-volume 0 -5%

# increase brightness by 10
XF86MonBrightnessUp
    light -A 10

# decrease brightness by 10
XF86MonBrightnessDown
    light -U 10

# next song (whatever player)
XF86AudioNext
    playerctl next

# previous song
XF86AudioPrev
    playerctl previous

# toggle play and pause
XF86AudioPlay
    playerctl play-pause

# hybrid sleep
XF86Sleep
    systemctl hybrid-sleep

