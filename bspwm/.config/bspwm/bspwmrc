#!/bin/sh

# set root pointer
xsetroot -cursor_name left_ptr

# key bindings
sxhkd &

# wallpaper
# nitrogen --restore &

# xfce settings
# xfsettingsd &

# unclutter (hides mouse while typing)
unclutter -idle 2 &

# compton
picom -C -b

# panel
# polybar main &

# start libinput-gestures
libinput-gestures-setup start

# start redshift
redshift -t 6500:4900 -l 3.2476811:101.74012689999999 &

# rofi greenclipboard daemon
greenclip daemon &

# start dropbox sync
dropbox start &

# Set some bsp specific stuff
bspc monitor -d 一 二 三 四 五 六 七 八

# bspwm settings
bspc config border_width 0
bspc config window_gap 3
bspc config top_padding 20
bspc config right_padding 0
bspc config bottom_padding 0
bspc config left_padding 0

bspc config split_ratio 0.5
bspc config borderless_monocle false
bspc config gapless_monocle true
bspc config paddingless_monocle true

bspc config pointer_modifier mod1
bspc config click_to_focus true
bspc config focus_follows_pointer true
bspc config pointer_action1 move
bspc config pointer_action2 resize_side
bspc config pointer_action3 resize_corner

# some window rules
bspc rule -a Spotify desktop='^8' follow=on focus=on
bspc rule -a feh state=floating follow=on

# kde menus settings
bspc rule -a plasmashell state=floating border=off layer=normal
bspc rule -a krunner state=floating border=off
