#!/usr/bin/env bash

disconnect1="/"
disconnect2="\\"
wconnected=""
econnected=""

id="$(nmcli | grep -w 'connected\|available' | awk '{print $2}'
)"
if [[ $id = "connected" ]]
    then
        echo "$wconnected"
elif [[ $id = "available" ]]
    then
        echo "$econnected"
else
    echo "$disconnect1"  # /
        sleep 0.6
        echo "$disconnect2"  # \
        sleep 0.6
fi

