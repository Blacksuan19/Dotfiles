#!/usr/bin/env bash
case $1 in
    -c)
        # clipboard
        copyq toggle
        ;;
    -l)
        # logout screen
        qdbus org.kde.ksmserver /KSMServer org.kde.KSMServerInterface.logout -1 -1 -1
        ;;
    *)
        printf "\nOption does not exist: %s\n\n" "$arg"
        exit 2
esac

(( $# == 0 )) && "$0" -c

exit 0
