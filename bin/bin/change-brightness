#!/usr/bin/env bash

# Brightnesss control using light

function notify {
    brightness=$(light)
    brightness=$(echo $brightness | awk '{print int($1)}')
    echo $brightness
    bar=$(seq -s "â”€" $(($brightness / 5)) | sed 's/[0-9]//g')
    echo $bar
    dunstify -i whitebalance -r 2593 -u normal "$bar  "
}

case $1 in
    up)
	light -A 5 > /dev/null
	notify;;
    down)
    light -U 5 > /dev/null
	notify;;
esac
