#!/usr/bin/env bash

wconnected=""
econnected=""
nconnected="睊"
connected="$(nmcli | grep -w 'connected\|available' | awk '{print $2}')"
wifi_id=$(nmcli | grep "wlan0" | awk '{print $4}')
ether_id=$(nmcli | grep "enp5s0" | awk '{print $4}')
if [[ $connected = *"connected"* ]]
    then
    if test -z "$ether_id"
    then
        echo "$wconnected $wifi_id"
    else
        echo " $econnected $ether_id"
    fi
else
    echo "$nconnected Not Connected"
fi
