#!/usr/bin/env bash

wconnected=""
econnected=""
connected="$(nmcli | grep -w 'connected\|available' | awk '{print $2}')"
id="$(nmcli | grep -w 'connected\|available' | awk '{print $4}')"
if [[ $connected = "connected" ]]
    then
        echo "$wconnected $id"
elif [[ $id = "available" ]]
    then
        echo "$econnected"
else
    echo "not connected"  # /
fi

