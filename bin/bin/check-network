#!/usr/bin/env bash

disconnect1="/"
disconnect2="\\"
wconnected=""
econnected=""
connected="$(nmcli | grep -w 'connected\|available' | awk '{print $2}')"
id="$(nmcli | grep -w 'connected\|available' | awk '{print $4}')"
if [[ $connected = "connected" ]]
    then
        echo "$wconnected $id"
elif [[ $id = "available" ]]
    then
        echo "$econnected"
else
    echo "$disconnect1"  # /
        sleep 0.6
        echo "$disconnect2"  # \
        sleep 0.6
fi

