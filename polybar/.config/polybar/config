;;;;;;;;;;;;;
;;   Bars  ;;
;;;;;;;;;;;;;

[bar/desks]

monitor = eDP
monitor-strict = false
override-redirect = true
wm-restack = bspwm
bottom = false
fixed-center = true
radius = 0
width = 216.5
height = 26
offset-x = 9
offset-y = 3
